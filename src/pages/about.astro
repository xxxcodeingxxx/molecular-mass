---
import BaseHead from '../components/BaseHead.astro'
import Footer from '../components/Footer.astro'
import Header from '../components/Header.astro'
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title="About Weather Data" description="" image="" />
    </head>
    <body
        class="w-screen h-screen relative bg-ligh z-0 bg-center bg-cover bg-no-repeat bg-[url('https://images.unsplash.com/photo-1556983703-27576e5afa24')] text-lteTxt dark:bg-darkMode dark:text-dmTxt"
    >
        <div class="w-full h-full absolute top-0 left-0 bg-black/[.95] z-10">
        </div>
        <Header classNames="relative z-20" />
        <div class="w-1/2 h-auto text-center z-20 relative mx-auto py-20">
            <h1 class="text-center text-5xl">About Weather Data</h1>
            <div
                class="w-full h-auto py-20 grid gap-8 grid-cols-1 lg:grid-cols-2 2xl:grid-cols-4"
            >
                <div
                    class="w-full min-h-64 rounded-xl bg-gradient-to-br from-indigo-500 from-30% to-sky-400"
                >
                </div>
                <div
                    class="w-full min-h-64 rounded-xl bg-gradient-to-br from-indigo-500 from-30% to-sky-400"
                >
                </div>
                <div
                    class="w-full min-h-64 rounded-xl bg-gradient-to-br from-indigo-500 from-30% to-sky-400"
                >
                </div>
                <div
                    class="w-full min-h-64 rounded-xl bg-gradient-to-br from-indigo-500 from-30% to-sky-400"
                >
                </div>
            </div>
        </div>
        <Footer classNames="absolute bottom-0 z-20 left-0 w-screen h-auto" />
    </body>
</html>
