---
import BaseHead from '../components/BaseHead.astro'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts'
import WeatherCard from '../components/WeatherCard.astro'
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    </head>
    <body
        class="w-screen h-auto bg-light text-lteTxt dark:bg-darkMode dark:text-dmTxt"
    >
        <Header />
        <main class="w-3/4 h-auto mx-auto py-20">
            <h1 class="text-3xl font-semibold text-center">
                Local Weather Data <span>
                    <img
                        class="w-16 inline-block ml-2 h-auto"
                        src="/images/logo.svg"
                        alt="Logo"
                    />
                </span>
            </h1>
            <div class="mx-auto w-full py-8 lg:w-1/2 h-auto">
                <input
                    id="zipCode"
                    name="zipCode"
                    class="inline-block px-4 text-darkMode w-7/12 md:w-3/4 h-10"
                    type="text"
                    placeholder="Enter your zipcode..."
                />
                <input
                    id="subBtn"
                    class="bg-headerBg text-white cursor-pointer ease-in-out duration-700 text-center text-lg px-4 py-1.5 text-darkMode font-bold hover:bg-white hover:text-headerBg"
                    type="submit"
                    value="Submit"
                />
            </div>
            <div class="w-full mx-auto h-auto py-8">
                <span class="text-3xl block text-center" id="cityName"></span>
            </div>
            <div
                class="w-full h-auto mx-auto py-8 text-center grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4"
            >
                <WeatherCard
                    location="Columbus, Ohio"
                    temp="28"
                    feels="19"
                    img="https://images.unsplash.com/photo-1578455451341-4abd1a00567e"
                    colorBg="bg-sky-300"
                    colorText="text-sky-300"
                    colorBorder="border-sky-300"
                    hoverTxt="hover:text-sky-300"
                    btnID="columbus"
                    details={`Lorem ipsum dolor sit amet, consectetur adipisicing elit. Praesentium quae natus magnam doloremque, quam velit provident aliquam explicabo totam, excepturi veniam officia culpa accusantium quidem quibusdam! Laboriosam deleniti eaque fugit?`}
                    icon="fa-snowflake"
                />
                <WeatherCard
                    temp="79"
                    feels="75"
                    location="Mexico City, Mexico"
                    img="https://images.unsplash.com/photo-1597716856994-03fd0d2495ea"
                    colorBg="bg-amber-300"
                    colorText="text-amber-300"
                    colorBorder="border-amber-300"
                    hoverTxt="hover:text-amber-300"
                    btnID="mexico"
                    icon="fa-sun"
                    details="Lorem ipsum dolor sit amet, consectetur adipisicing elit. Praesentium quae natus magnam doloremque, quam velit provident aliquam explicabo totam, excepturi veniam officia culpa accusantium quidem quibusdam! Laboriosam deleniti eaque fugit?"
                />
                <WeatherCard
                    temp="73"
                    feels="71"
                    location="Miami, Florida"
                    img="https://images.unsplash.com/photo-1533106497176-45ae19e68ba2"
                    colorBg="bg-gray-300"
                    colorText="text-gray-300"
                    colorBorder="border-gray-300"
                    hoverTxt="hover:text-gray-300"
                    btnID="miami"
                    icon="fa-cloud"
                    details="Lorem ipsum dolor sit amet, consectetur adipisicing elit. Praesentium quae natus magnam doloremque, quam velit provident aliquam explicabo totam, excepturi veniam officia culpa accusantium quidem quibusdam! Laboriosam deleniti eaque fugit?"
                />
            </div>
            <div class="grid grid-cols-4 relative w-full mx-auto h-auto py-12">
                <div class="w-full h-auto col-span-1 mx-auto">
                    <div class="w-full h-auto py-12 bg-black/75">
                        <div class="w-3/4 h-auto mx-auto text-center">
                            <div
                                class="w-full h-auto text-dmTxt text-2xl mb-16 mx-auto"
                            >
                                Today, 20:33
                            </div>
                            <div class="w-full h-auto mx-auto mb-16">
                                <i
                                    class="fa-solid fa-sun text-9xl text-yellow-500"
                                ></i>
                            </div>
                            <div
                                class="w-full h-auto text-8xl mb-4 text-yellow-400 mx-auto"
                            >
                                88 ℉
                            </div>
                            <div class="w-full h-auto text-xl text-dmTxt">
                                Feels like 92 ℉
                            </div>
                            <div
                                class="w-full h-auto mx-auto grid grid-cols-2 py-8 text-left"
                            >
                                <div
                                    class="w-full text-dmTxt text-lg h-auto mb-4"
                                >
                                    Rain Chance
                                </div>
                                <div
                                    class="w-full text-lg text-dmTxt ml-12 h-auto"
                                >
                                    <i
                                        class="fa-solid text-sky-500 mr-2 fa-droplet"
                                    ></i> 12%
                                </div>
                                <div
                                    class="w-full text-lg text-dmTxt mb-4 h-auto"
                                >
                                    Wind Speed
                                </div>
                                <div
                                    class="w-full h-auto text-lg text-dmTxt ml-12"
                                >
                                    <i
                                        class="fa-solid fa-circle text-lime-300 mr-2"
                                    ></i> 8 mph
                                </div>
                                <div
                                    class="w-full text-lg text-dmTxt mb-4 h-auto"
                                >
                                    Humidity
                                </div>
                                <div
                                    class="w-full h-auto text-lg text-dmTxt ml-12"
                                >
                                    <i
                                        class="fa-solid fa-circle mr-2 text-green-300"
                                    ></i> 63%
                                </div>
                                <div
                                    class="w-full text-lg text-dmTxt mb-4 h-auto"
                                >
                                    Air Quality
                                </div>
                                <div
                                    class="w-full text-lg text-dmTxt ml-12 h-auto"
                                >
                                    <i
                                        class="fa-solid fa-circle mr-2 text-rose-300"
                                    ></i> 23 AQI
                                </div>
                                <div
                                    class="w-full text-lg text-dmTxt mb-4 h-auto"
                                >
                                    Pressure
                                </div>
                                <div
                                    class="w-full h-auto text-lg text-dmTxt ml-12"
                                >
                                    <i
                                        class="fa-solid fa-circle mr-2 text-indigo-300"
                                    ></i> 1044 mb
                                </div>
                                <div
                                    class="w-full h-auto text-lg text-dmTxt mb-4"
                                >
                                    UV Index
                                </div>
                                <div
                                    class="w-full h-auto text-lg text-dmTxt ml-12"
                                >
                                    <i
                                        class="fa-solid fa-circle mr-2 text-yellow-300"
                                    ></i> 17
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="w-full col-span-3 h-auto mx-auto">
                    <div class="w-full h-auto py-12 bg-black/[.50]">
                        <div class="w-10/12 h-auto mx-auto">
                            <div class="w-full h-auto grid grid-cols-2 gap-4">
                                <div
                                    class="w-full h-auto bg-gray-300 rounded p-8"
                                >
                                    <img
                                        class="w-full h-auto"
                                        src="/images/weatherUI/chart.svg"
                                        alt="Weather Chart"
                                    />
                                </div>
                                <div
                                    class="w-full h-auto bg-gray-300 rounded p-8"
                                >
                                    <img
                                        src="/images/weatherUI/chart-2.svg"
                                        alt="Sunrise/Sunset Chart"
                                        class="w-full h-auto"
                                    />
                                </div>
                                <div
                                    class="w-full h-auto bg-gray-300 rounded p-8"
                                >
                                    <img
                                        class="w-full h-auto"
                                        src="/images/weatherUI/chart-3.svg"
                                        alt="UV Index Chart"
                                    />
                                </div>
                                <div
                                    class="w-full h-auto bg-gray-300 rounded p-8"
                                >
                                    <img
                                        src="/images/weatherUI/chart-4.svg"
                                        alt="Chance of rainfall chart."
                                        class="w-full h-auto"
                                    />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- <Rhombus
                    day="Fri"
                    img="https://plus.unsplash.com/premium_photo-1664298006973-e98eb94d006c"
                    tempH={88}
                    tempL={66}
                    windOne="SW @ 8mph"
                    windTwo="SE @ 4mph"
                    iconOne="/images/weatherUI/pMoon.svg"
                    iconOneAlt="Partial Moon"
                    iconTwo="/images/weatherUI/pMoonRain.svg"
                    iconTwoAlt="Partial Moon and Rain"
                />
                <Rhombus
                    day="Sat"
                    img="https://images.unsplash.com/photo-1537210249814-b9a10a161ae4"
                    tempH={86}
                    tempL={72}
                    windOne="SW @ 8mph"
                    windTwo="SE @ 4mph"
                    iconOne="/images/weatherUI/pSunny.svg"
                    iconOneAlt="Partial Sunlight"
                    iconTwo="/images/weatherUI/pSunRain.svg"
                    iconTwoAlt="Partial Sunlight and Rain"
                />
                <Rhombus
                    day="Sun"
                    img="https://images.unsplash.com/photo-1581059729226-c493d3086748"
                    tempH={87}
                    tempL={71}
                    windOne="SW @ 8mph"
                    windTwo="SE @ 4mph"
                    iconOne="/images/weatherUI/sunny.svg"
                    iconOneAlt="Windy Conditions"
                    iconTwo="/images/weatherUI/pSunRain.svg"
                    iconTwoAlt="Windy Conditions Cold"
                /> -->
            </div>
        </main>
        <Footer />
        <script>
            import '../scripts/app'
            import '../scripts/stats'
        </script>
    </body>
</html>
